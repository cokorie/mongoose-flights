<%- include('../partials/header') %>

<h1>Flights List</h1>
  <table id="flights">
    <thead>
      <tr>
        <th>Airport</th>
        <th>Airline</th>
        <th>Flight #</th>
        <th>Departure Time</th>
        <th>Flight Info</th>
        <th>Delete?</th>
      </tr>
    </thead>
    <tbody>
      <!-- Write the line of EJS to iterate over movies using forEach -->
      <% flights.forEach(function(f) { %>
        <tr>
          <td><%= f.airport %></td>
          <td><%= f.airline %></td>
          <td><%= f.flightNo %></td>
          <td><%= f.departs.toLocaleString() %></td>
          <td><a href="/flights/<%= f.id %>">DETAILS</a></td>
          <td>
            <form method="POST" action="/flights/<%= f._id %>?_method=DELETE">
              <button type="submit">X</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>

<%- include('../partials/footer') %>